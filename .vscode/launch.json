{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QGIS Plugin Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "/usr/bin/qgis", // QGIS executable path
            "args": [
                "--project",
                "${workspaceFolder}/GEEST.qgs"
            ], // Optional QGIS project
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/geest"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "Python: Remote Attach 9000",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": "/home/timlinux/.local/share/QGIS/QGIS3/profiles/GEEST2/python/plugins/"
                }
            ],
            "justMyCode": false
        }
    ]
}
